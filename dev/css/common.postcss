:root {
  --primary: #FDB92D;
}

/* ---------------- base ---------------- */
*, *:after, *:before{
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html, body{
  font-family: 'Karla', 'Helvetica', sans-serif;
  line-height: 1.6;
  color: #374135;
  font-size: 18px;
  overflow-x: hidden;
}
@media screen and (max-width: 1000px){
  html, body{
    font-size: 16px;
  }
}

a{
  text-decoration: none;
  color: inherit;
  opacity: .8;
  transition: .2s opacity ease;
}
a:hover{
  opacity: 1;
}
p{
  margin: .5em 0;
}
h3:not(:first-child), h4:not(:first-child) {
  margin-top: 1.5em;
}
ul, ol {
  padding-left: 1.5em;
}

img, video {
  width: 100%;
}

/****************** typography ******************/
h1 {
  font-family: 'Playfair Display', serif;
  font-size: 2.4em;
  position: relative;
}

h2 {
  font-family: 'Playfair Display', serif;
  position: relative;
  font-size: 1.8em;
  top: -.1em;  /* Offset to align with small font on the right */
}

h3 {
  font-size: 1.5em;
}
h4 {
  font-size: 1.2em;
}

._primary-link{
  display: inline-flex;
  align-items: center;
  margin: 8px 0;
  font-weight: bold;
  text-transform: capitalize;
  position: relative;
}
._primary-link:before {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  top: 50%;
  height: .8em;
  background: var(--primary);
  opacity: .3;
}
._primary-link:after{
  content: '';
  height: 1em;
  width: 1em;
  background-image: url(/assets/link_arrow.svg);
  background-repeat: no-repeat;
  background-size: cover;
  margin-left: .5em;
}

.center {
  text-align: center;
}

/****************** layout ******************/
main {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2em;
}

.equal-col {
  display: flex;

  &.vert-center {
    align-items: center;
  }

  & > * {
    width: 0;
    flex: 1 0 0;
  }
  & > * + * {
    padding-left: 2em;
  }
}
